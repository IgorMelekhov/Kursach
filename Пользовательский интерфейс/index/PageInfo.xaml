    <Grid>
        <Grid HorizontalAlignment="Center" Height="62" VerticalAlignment="Top" Width="800" Background="#FFDADADA">
            <Image x:Name="Back" HorizontalAlignment="Left" Height="40" Margin="738,0,0,0" VerticalAlignment="Center" Width="40" Source="/Group 40.png" MouseUp="Click_Back"/>
        </Grid>
        <Border BorderBrush="Black" BorderThickness="2" Margin="-10,62,0,369" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Grid HorizontalAlignment="Center" Height="368" VerticalAlignment="Top" Width="800" Background="#FFDADADA" Margin="0,66,0,0">
            <Label x:Name="Name" Content="Название: Приложение для работы с домашней метеостанцией " FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,136,0,0"/>
